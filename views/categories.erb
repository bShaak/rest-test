<% keys = @category_hash.keys %>

<!--Create a table for each key in the categories hash-->
<% keys.each do |key| %>
  <% total = 0.0 %>
  <% category = @category_hash[key][0].category %>
  <% @category_hash[key].each do |transaction| %>
    <% total += transaction.amount %>
  <% end %>
  <h3><%= "#{category} Balance: " + '%.2f' % total %></h3>
  <table border="1" class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Category</th>
        <th>Company</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @category_hash[key].each do |transaction| %>
        <tr>
          <td><%= transaction.date %></td>
          <td><%= transaction.category %></td>
          <td><%= transaction.company %></td>
          <td><%= transaction.amount %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
